{
  "manifest_version": 3,
  "name": "Typst-Compose",
  "description": "A basic plugin to compose emails using Typst",
  "version": "1.0",
  "author": "Christopher Pattison",
  "browser_specific_settings": {
    "gecko": {
      "id": "helloworld@yoursite.com",
      "strict_min_version": "128.0"
    }
  },
  "permissions": ["compose", "scripting", "sensitiveDataUpload"],
  "host_permissions": ["*://127.0.0.1/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "compose_action": {
    "default_title": "Compose Typst"
  }
}
